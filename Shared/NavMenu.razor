<Sider Collapsible Collapsed=@collapsed OnCollapse=@onCollapse>
    <div>
        <img class="logo-img" alt="Logo do site" src="img/walleticon.png"/>
    </div>
    <div>
        <LoginDisplay/>
    </div>
    <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Inline">
        <MenuItem RouterLink="">
            <Icon Type="home" Theme="outline"/>
            <span>Home</span>
        </MenuItem>
        <MenuItem RouterLink="NewRecord">
            <Icon Type="plus" Theme="outline"/>
            <span>Novo Registro</span>
        </MenuItem>
        <MenuItem RouterLink="Expense">
            <Icon Type="fall" Theme="outline"/>
            <span>Despesas</span>
        </MenuItem>
        <MenuItem RouterLink="ExpenseUser">
            <Icon Type="fall" Theme="outline"/>
            <span>Minhas Despesas</span>
        </MenuItem>
    </Menu>
</Sider>

@code {
    bool collapsed;

    void onCollapse(bool collapsed)
    {
        this.collapsed = collapsed;
    }

}